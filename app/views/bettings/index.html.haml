- model_class = Betting
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:race_course)
      %th= model_class.human_attribute_name(:race_grade)
      %th= model_class.human_attribute_name(:race_name)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:way)
      %th= model_class.human_attribute_name(:option)
      %th= model_class.human_attribute_name(:favorite)
      %th= model_class.human_attribute_name(:horse_num)
      %th= model_class.human_attribute_name(:points)
      %th= model_class.human_attribute_name(:unit)
      %th= model_class.human_attribute_name(:total)
      %th= model_class.human_attribute_name(:income)
      %th= model_class.human_attribute_name(:loss)
      %th= model_class.human_attribute_name(:account)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @bettings.each do |betting|
      %tr
        %td= link_to betting.id, betting_path(betting)
        %td= betting.date
        %td= betting.race_course
        %td= betting.race_grade
        %td= betting.race_name
        %td= betting.type
        %td= betting.way
        %td= betting.option
        %td= betting.favorite
        %td= betting.horse_num
        %td= betting.points
        %td= betting.unit
        %td= betting.total
        %td= betting.income
        %td= betting.loss
        %td= betting.account
        %td=l betting.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_betting_path(betting), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), betting_path(betting), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_betting_path, :class => 'btn btn-primary'
