- model_class = Betting
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @betting.date
%p
  %strong= model_class.human_attribute_name(:race_course) + ':'
  %br
  = @betting.race_course
%p
  %strong= model_class.human_attribute_name(:race_grade) + ':'
  %br
  = @betting.race_grade
%p
  %strong= model_class.human_attribute_name(:race_name) + ':'
  %br
  = @betting.race_name
%p
  %strong= model_class.human_attribute_name(:betting_type) + ':'
  %br
  = @betting.betting_type
%p
  %strong= model_class.human_attribute_name(:betting_way) + ':'
  %br
  = @betting.betting_way
%p
  %strong= model_class.human_attribute_name(:betting_option) + ':'
  %br
  = @betting.betting_option
%p
  %strong= model_class.human_attribute_name(:favorite) + ':'
  %br
  = @betting.favorite
%p
  %strong= model_class.human_attribute_name(:horse_nums) + ':'
  %br
  = @betting.horse_nums
%p
  %strong= model_class.human_attribute_name(:points) + ':'
  %br
  = @betting.points
%p
  %strong= model_class.human_attribute_name(:unit) + ':'
  %br
  = @betting.unit
%p
  %strong= model_class.human_attribute_name(:total) + ':'
  %br
  = @betting.total
%p
  %strong= model_class.human_attribute_name(:income) + ':'
  %br
  = @betting.income
%p
  %strong= model_class.human_attribute_name(:loss) + ':'
  %br
  = @betting.loss
%p
  %strong= model_class.human_attribute_name(:account) + ':'
  %br
  = @betting.account


= link_to t('.back', :default => t("helpers.links.back")), bettings_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_betting_path(@betting), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), betting_path(@betting), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
