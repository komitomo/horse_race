    = f.label :race_course, :class => 'control-label'
    .controls
      = f.text_field :race_course, :class => 'form-control'
  .form-group
    = f.label :race_grade, :class => 'control-label'
    .controls
      = f.text_field :race_grade, :class => 'form-control'
  .form-group
    = f.label :race_name, :class => 'control-label'
    .controls
      = f.text_field :race_name, :class => 'form-control'
  .form-group
    = f.label :betting_type, :class => 'control-label'
    .controls
      = f.text_field :betting_type, :class => 'form-control'
  .form-group
    = f.label :betting_way, :class => 'control-label'
    .controls
      = f.text_field :betting_way, :class => 'form-control'
  .form-group
    = f.label :betting_option, :class => 'control-label'
    .controls
      = f.text_field :betting_option, :class => 'form-control'
  .form-group
    = f.label :favorite, :class => 'control-label'
    .controls
      = f.text_field :favorite, :class => 'form-control'
  .form-group
    = f.label :horse_nums, :class => 'control-label'
    .controls
      = f.text_field :horse_nums, :class => 'form-control'
  .form-group
    = f.label :points, :class => 'control-label'
    .controls
      = f.text_field :points, :class => 'form-control'
  .form-group
    = f.label :unit, :class => 'control-label'
