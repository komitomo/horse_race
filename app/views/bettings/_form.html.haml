= form_for @betting, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label '日付', :class => 'control-label'
    .controls
      = f.text_field :date, :class => 'text_field'
  .control-group
    = f.label '場名', :class => 'control-label'
    .controls
      = f.text_field :race_course, :class => 'text_field'
  .control-group
    = f.label 'グレード', :class => 'control-label'
    .controls
      = f.text_field :race_grade, :class => 'text_field'
  .control-group
    = f.label 'レース名', :class => 'control-label'
    .controls
      = f.text_field :race_name, :class => 'text_field'
  .control-group
    = f.label '式別', :class => 'control-label'
    .controls
      = f.text_field :type, :class => 'text_field'
  .control-group
    = f.label '方式', :class => 'control-label'
    .controls
      = f.text_field :way, :class => 'text_field'
  .control-group
    = f.label 'オプション', :class => 'control-label'
    .controls
      = f.text_field :option, :class => 'text_field'
  .control-group
    = f.label '軸馬', :class => 'control-label'
    .controls
      = f.text_field :favorite, :class => 'text_field'
  .control-group
    = f.label '馬番', :class => 'control-label'
    .controls
      = f.text_field :horse_num, :class => 'text_field'
  .control-group
    = f.label '点数', :class => 'control-label'
    .controls
      = f.text_field :points, :class => 'text_field'
  .control-group
    = f.label '単位', :class => 'control-label'
    .controls
      = f.text_field :unit, :class => 'text_field'
  .control-group
    = f.label '計', :class => 'control-label'
    .controls
      = f.text_field :total, :class => 'text_field'
  .control-group
    = f.label '+', :class => 'control-label'
    .controls
      = f.text_field :income, :class => 'text_field'
  .control-group
    = f.label '-', :class => 'control-label'
    .controls
      = f.text_field :loss, :class => 'text_field'
  .control-group
    = f.label '収支', :class => 'control-label'
    .controls
      = f.text_field :account, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), bettings_path, :class => 'btn'
